<%- include('../partials/head', {titulo: pelicula.titulo}) %>
<body>
  <div class="container container-custom text-center">
    <h1 class="mb-4"><%= pelicula.titulo %></h1>
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="card movie-card shadow text-center">
          <img src="/almacen/<%=pelicula.url_imagen.split('/').pop()%>" class="card-img-top" alt="Tellma">
          <a href="/pelicula/visto/<%= pelicula.id_pelicula%>" ><p><%= (pelicula.estado_vista==="true")? "VISTO" : "SIN VER" %></p></a>
        </div>
      </div>

      <div class="col-md-7 d-flex flex-column justify-content-between">
        <p>
          <%= pelicula.sinopsis %>
        </p>
        <div>
          <button class="btn btn-custom mb-3" data-bs-toggle="modal" data-bs-target="#trailerModal">Trailer</button>
          <div>
            <a href="/" class="me-3 text-decoration-none">Atr√°s</a>
            <a href="/pelicula/modificar/<%= pelicula.id_pelicula %>" class="text-decoration-none">Editar</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal del trailer -->
  <div class="modal fade" id="trailerModal" tabindex="-1" aria-labelledby="trailerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="trailerModalLabel">Trailer de <%= pelicula.titulo %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body p-0">
          <div class="ratio ratio-16x9">
            <iframe src=<%= pelicula.url_trailer %> title="Trailer" allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>

<%- include('../partials/footer') %>